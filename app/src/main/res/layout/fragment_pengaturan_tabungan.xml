<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/fragment_pengaturan"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWord"
    android:tag="fragment_pengaturans">
    <!--<ProgressBar
        android:id="@+id/bar_pengaturan"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="100dp"
        android:layout_height="100dp"/>-->
    <ScrollView
        android:id="@+id/scroll_pengaturan"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/frames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/desc_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25sp"
                android:text="@string/desc_setting"
                android:textSize="16sp"
                android:textColor="@color/colorTabel"
                />
            <TextView
                android:id="@+id/no_telp_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25sp"
                android:layout_marginLeft="25sp"
                android:layout_marginTop="10sp"
                android:layout_below="@id/desc_setting"
                android:text="@string/telp_setting"
                android:textSize="16sp"
                android:textColor="@color/colorTabel"
                />
            <EditText
                android:id="@+id/telp_edit_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/no_telp_settings"
                android:layout_marginLeft="25sp"
                android:layout_marginRight="25sp"
                android:text="0812345678900"/>
            <ImageView
                android:id="@+id/edit_no_telp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mode_edit"
                android:layout_below="@id/no_telp_settings"
                android:layout_alignParentRight="true"
                android:layout_marginRight="35sp"
                />
            <Button
                android:id="@+id/save_settings"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="30dp"
                android:text="Save"
                android:textStyle="bold"
                android:textColor="@color/colorWord"
                android:background="@drawable/tombol4"
                android:layout_below="@id/telp_edit_setting"
                />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>